# API Keys
OPENAI_API_KEY=your_openai_api_key_here

# Google Cloud TTS (if needed in future)
GOOGLE_CLOUD_CREDENTIALS_JSON=path/to/your/credentials.json

# App Config
MAX_AUDIO_DURATION=30
USE_OPENAI_TTS=True
USE_OPENAI_STT=True

# Path Configs
DATA_PATH=data/knowledge_base.txt
FAISS_INDEX_PATH=data/faiss_index/index.faiss

# Models
MODEL_NAME=gpt-4o
WHISPER_MODEL=base
TTS_VOICE=alloy # Other options: echo, fable, onyx, nova, shimmer

CONTEXT_MEMORY_TURNS=15

# URLs
API_BASE_URL=http://localhost:8000
# IMPORTANT: for docker containers, use service name instead of localhost
# API_BASE_URL=http://voice-ai-fastapi:8000
